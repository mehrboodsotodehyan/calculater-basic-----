def add(a, b):
    return a + b
def subtract(a, b):
    return a - b
def multiply(a, b):
    return a * b
def divide(a, b):
    return a / b
def main():
    # Get the two numbers from the user.
    a = int(input("Enter the first number: "))
    b = int(input("Enter the second number: "))
    # Get the operator from the user.
    operator = input("Enter the operator (+, -, *, /): ")
    # Calculate the result.
    if operator == "+":
        result = add(a, b)
    elif operator == "-":
        result = subtract(a, b)
    elif operator == "*":
        result = multiply(a, b)
    elif operator == "/":
        result = divide(a, b)
    # Print the result.
    print("The result is:", result)
if __name__ == "__main__":
    main()
